<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center_horizontal|center_vertical|clip_horizontal"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".LockScreenActivity" >

    <ImageView
        android:id="@+id/providerImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal|center_vertical|clip_horizontal"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:contentDescription="@+strings/title_activity_main"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical|clip_horizontal"
        android:paddingTop="40dp"
        android:layout_weight="1"
        android:inputType="none"
        android:minLines="1"
        android:maxLines="2"
        android:textSize="@dimen/large_font">

    </TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="bottom|center_horizontal|center_vertical|clip_horizontal"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:contentDescription="@+strings/ford"
        android:src="@drawable/ford_oval" />
</LinearLayout>
