<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<TextView
        android:id="@+id/conditionsLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:inputType="none"
        android:maxLines="1"
        android:minLines="1"
        android:text="@string/conditions_location" />
        
    <ImageView
        android:id="@+id/conditionsIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/conditionsLocationTextView"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/currentTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/conditionsIcon"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="56dp"
        android:layout_marginRight="16dp"
        android:text="@string/conditions_no_value"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/adjustedTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conditionsText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/conditions_no_value"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/windSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adjustedTemp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/conditions_no_value"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/windSpeed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text ="@string/conditions_no_value"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/conditionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conditionsIcon"
        android:layout_alignLeft="@+id/conditionsIcon"
        android:layout_alignRight="@+id/conditionsIcon"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="@string/conditions_loading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>